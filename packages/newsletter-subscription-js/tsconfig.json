{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./nortic.d.ts"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "./nortic.d.ts"
  ],
  "exclude": [
    "./node_modules/**",
    "./dist/**"
  ]
}
